<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9ede4"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f79348" >

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_next" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="用户注册"
            android:textColor="#FFF"
            android:textSize="20dp" >
        </TextView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/linearlayout_marging"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#f6f6f6"
            android:ems="10"
            android:hint="用户名"
            android:textColor="#000000"
            android:textColorHint="#979797" >
        </EditText>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#979797" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#f6f6f6"
            android:ems="16"
            android:hint="密码"
            android:textColor="#000000"
            android:textColorHint="#979797" >
        </EditText>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#979797" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#f6f6f6"
            android:ems="10"
            android:hint="确认密码"
            android:textColor="#000000"
            android:textColorHint="#979797" >
        </EditText>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#979797" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText1"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:background="#f6f6f6"
                android:ems="11"
                android:hint="手机号码"
                android:textColor="#000000"
                android:textColorHint="#979797" >
            </EditText>
            
            <Button 
                android:layout_height="20dp"
                android:layout_width="wrap_content"
                android:background="@drawable/user_register_setyzm_btn"
                android:layout_marginRight="5dp"
                android:textSize="10dp"
                android:text="获取验证码"
                android:textColor="#FFFFFF"
                />
            
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#979797" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#f6f6f6"
            android:ems="6"
            android:hint="验证码"
            android:textColor="#000000"
            android:textColorHint="#979797" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/user_register_setagreement"
                android:button="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我已年满18岁并同意"
                android:textColor="#636363" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《期期乐彩票网服务协议》"
            android:textColor="#0000FF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/user_longin_setbutton"
            android:text="注册"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>